<!DOCTYPE html>
<html lang="en">
<%- include head.ejs %>
<body>

<div class="site-wrap">

    <div class="site-mobile-menu">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="icon-close2 js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <% if(!auth) { %>
        <%- include('navbar.ejs', {auth: auth}); %>
        <div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(images/hero_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center justify-content-center text-center">

                    <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">


                        <div class="row justify-content-center mt-5">
                            <div class="col-md-8 text-center">
                                <h1><%= title %></h1>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <div class="site-section"  data-aos="fade">
            <div class="container">

                <div class="row mb-5">
                    <div class="text-left border-primary">
                        <h2 class="font-weight-light text-primary pb-3">Classification of Tasks ...</h2>
                    </div>
                    <button class="btn btn-secondary ml-auto" type="button" id="button-addon2">
                        <a class="text-white" href="/post">Post New Task</a>
                    </button>
                </div>
                <div class = "row align-items-center"></div>
                <form action="/tasks">
                    <% for(var i=0; i < types.length ; i++) { %>
                        <% var type = types[i].cname %>
                        <% if(i % 2 == 0) { %>
                            <button class="btn btn-outline-primary btn-lg col-md-3 ml-auto" id="type" name="type" value="<%= type %>" onclick="this.form.submit()">
                                <%= type %>
                            </button>
                        <% } else { %>
                            <button class="btn btn-primary btn-lg col-md-3 ml-auto" id="type" name="type" value="<%= type %>" onclick="this.form.submit()">
                                <%= type %>
                            </button>
                        <% } %>
                        &nbsp;
                    <% } %>
                </form>
            </div>
        </div>

        <div class="newsletter bg-primary py-5">
            <div class="container">
                <div class="row align-items-center">
                    <form class="d-flex col-md-6" action="/tasks/search" method="get">
                        <input type="text" id="keyword" name="keyword" value="" class="form-control" placeholder="Search">
                        <input type="submit" value="Search" class="btn btn-white">
                    </form>
                </div>
            </div>
        </div>
    <% } else { %>
        <%- include('navbar.ejs', {user: user, auth: auth}); %>
        <% if(user == 0) { %>
            <%- include('admin.ejs', {user:user, auth: auth});%>
        <% } else { %>
            <div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(images/hero_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
                <div class="container">
                    <div class="row align-items-center justify-content-center text-center">

                        <div class="col-md-10" data-aos="fade-up" data-aos-delay="400">


                            <div class="row justify-content-center mt-5">
                                <div class="col-md-8 text-center">
                                    <h1><%= title %></h1>
                                    <p class="mb-0">Find help or do a task blah blah</p>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>

            <div class="site-section"  data-aos="fade">
                <div class="container">

                    <div class="row mb-5">
                        <div class="text-left border-primary">
                            <h2 class="font-weight-light text-primary pb-3">Classification of Tasks ...</h2>
                        </div>
                        <button class="btn btn-secondary ml-auto" type="button" id="button-addon2">
                            <a class="text-white" href="/post">Post New Task</a>
                        </button>
                    </div>
                    <div class = "row align-items-center"></div>
                    <form action="/tasks">
                        <% for(var i=0; i < types.length ; i++) { %>
                            <% var type = types[i].cname %>
                            <% if(i % 2 == 0) { %>
                                <button class="btn btn-outline-primary btn-lg col-md-3 ml-auto" id="type" name="type" value="<%= type %>" onclick="this.form.submit()">
                                    <%= type %>
                                </button>
                            <% } else { %>
                                <button class="btn btn-primary btn-lg col-md-3 ml-auto" id="type" name="type" value="<%= type %>" onclick="this.form.submit()">
                                    <%= type %>
                                </button>
                            <% } %>
                            &nbsp;
                        <% } %>
                    </form>
                </div>
            </div>

            <div class="newsletter bg-primary py-5">
                <div class="container">
                    <div class="row align-items-center">
                        <form class="d-flex col-md-6" action="/tasks/search" method="get">
                            <input type="text" id="keyword" name="keyword" value="" class="form-control" placeholder="Search">
                            <input type="submit" value="Search" class="btn btn-white">
                        </form>
                    </div>
                </div>
            </div>
        <% } %>
    <% } %>
    <%- include footer.ejs %>
<%- include script.ejs %>
</body>
</html>
